<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_notify">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="6">

        <TextView
            android:text="@string/malename"
            android:gravity="right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_male_name_notify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:id="@+id/img_boy_notify"
            android:layout_width="0dp"
            android:src="@drawable/boy"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/heart" />

            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:id="@+id/tv_time_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

        <ImageView
            android:id="@+id/img_girl_notify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/boy"
            android:layout_weight="1"
            android:padding="2dp" />

        <TextView
            android:text="@string/femalename"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_female_name_notify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>